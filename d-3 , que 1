#include <stdio.h>

struct person {
    char name[50];
    int age;
    float height;
};

int main() {
    // Create a person instance
    struct person john = {"John", 30, 1.75};

    // Print the person's information
    printf("Name: %s\n", john.name);
    printf("Age: %d\n", john.age);
    printf("Height: %.2f meters\n", john.height);

    return 0;
}
